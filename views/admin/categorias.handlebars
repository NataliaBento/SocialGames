{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>Slug: {{slug}}</small><br>
            <small>Data da Criação: {{Date}}</small><br>

            <div class="d-flex gap-2">
                <a href="/admin/categorias/edit/{{_id}}">
                    <button class="btn btn-success btn-sm mt-4">Editar categoria</button>
                </a>

                <form action="/admin/categorias/deletar" method="POST">
                    <input type="hidden" name="id" value="{{_id}}">
                    <button type="submit" class="btn btn-danger btn-sm mt-4">Apagar Categoria</button>
                </form>
            </div>
        </div>
    </div>
{{else}}
 <h4 class="mt-3">Nenhuma Categoria Registrada!</h4>
{{/each}}
